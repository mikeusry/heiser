---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found - The Heiser Group">
	<section class="min-h-screen flex items-center justify-center bg-gray-50 px-6">
		<div class="max-w-2xl mx-auto text-center">
			<h1 class="text-9xl font-heading font-bold text-brand-orange mb-4">404</h1>
			<h2 class="text-4xl font-heading font-bold text-brand-navy mb-6">Page Not Found</h2>
			<p class="text-xl text-gray-600 mb-8">
				Oops! The page you're looking for doesn't exist. It might have been moved or deleted.
			</p>
			<div class="flex gap-4 justify-center">
				<a
					href="/"
					class="inline-block bg-brand-orange text-white px-8 py-4 rounded-lg font-semibold hover:bg-brand-orange-dark transition-all duration-300"
				>
					Go Home
				</a>
				<a
					href="/contact"
					class="inline-block bg-white text-brand-navy border-2 border-brand-navy px-8 py-4 rounded-lg font-semibold hover:bg-brand-navy hover:text-white transition-all duration-300"
				>
					Contact Us
				</a>
			</div>
		</div>
	</section>
</BaseLayout>