---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTASection from '../components/CTASection.astro';
---

<BaseLayout title="Realty Cleaning Services - The Heiser Group" description="Professional move-in, move-out, and real estate cleaning services in Chicago and Lake County Illinois.">
	<section class="bg-brand-navy text-white py-40 px-6">
		<div class="max-w-4xl mx-auto">
			<p class="text-white text-lg font-semibold mb-4 uppercase tracking-wide">REALTY CLEANING</p>
			<h1 class="text-5xl md:text-6xl font-heading font-bold mb-6 text-white">
				Move-In & Move-Out Cleaning
			</h1>
			<p class="text-xl text-white">
				Make your property shine for the next tenant or buyer with our thorough realty cleaning services.
			</p>
		</div>
	</section>

	<section class="py-20 bg-white">
		<div class="max-w-6xl mx-auto px-6">
			<h2 class="text-4xl font-heading font-bold text-brand-navy text-center mb-16">Perfect For</h2>
			<div class="grid md:grid-cols-3 gap-8">
				<div class="text-center p-8">
					<h3 class="text-2xl font-heading font-bold text-brand-navy mb-4">Real Estate Agents</h3>
					<p class="text-gray-600">Prepare properties for showings and new tenants</p>
				</div>
				<div class="text-center p-8">
					<h3 class="text-2xl font-heading font-bold text-brand-navy mb-4">Property Managers</h3>
					<p class="text-gray-600">Turnover cleaning between tenants</p>
				</div>
				<div class="text-center p-8">
					<h3 class="text-2xl font-heading font-bold text-brand-navy mb-4">Homeowners</h3>
					<p class="text-gray-600">Moving in or out? We handle the cleaning</p>
				</div>
			</div>
		</div>
	</section>

	<CTASection
		title="Property Ready in No Time"
		subtitle="Get your property move-in ready with our professional realty cleaning services."
		buttonLink="/contact"
	/>
</BaseLayout>